{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "rootDir": "src",
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "files": ["./src/index.ts"],
  "exclude": ["node_modules", "build", "./"]
}
